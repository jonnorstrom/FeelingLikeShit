<div id="poop-rating" class="rating-container">
  <h1>Tell us about your fecal</h1>
  <% if flash[:vote_errors] %>
  <div class="container vote-errors">
  <% flash[:vote_errors].each do |e| %>
    <p class="center-align"><%= e %></p>
    <% end %>
  </div>
  <% end %>
  <div class="vote-form">
    <%= form_for @vote do |f| %>
    <%= text_field_tag :desc %>
    <%= f.submit %>
    <% end %>
  </div>
  <div class="row valign-wrapper">
    <div class="container rating-options valign">
      <p id="enjoyable" class="center-align col m4 offset-m1 offset-s2 s8">Enjoyable</p>
      <p id="indifferent" class="center-align col m4 offset-m2 offset-s2 s8">Indifferent</p>
      <p id="uncomfortable" class="center-align col m4 offset-m1 offset-s2 s8">Uncomfortable</p>
      <p id="afflictive" class="center-align col m4 offset-m2 offset-s2 s8">Afflictive</p>
      <p id="agonizing" class="center-align col m4 offset-m4 offset-s2 s8">Agonizing</p>
    </div>
  </div>
  <div class="total-votes-header center-align">
    <h4>Total Shits: <%= Vote.all.count %></h4>
  </div>
  <div class="ct-chart ct-perfect-fourth"></div>
</div>

